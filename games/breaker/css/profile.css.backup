

/* ===============================
   PROFIL UTILISATEUR - STYLES
   =============================== */
  html, body{
  margin:0;
  width:100%;
  overflow-x:hidden;
}


.profile-page{
  min-height: 100dvh;
  overflow-x: hidden;
  overflow-y: auto;
}


body{
  background: #05050a; /* fallback propre si l'image tarde */
}





/* Fond */
.bg-img{
  position: fixed;
  top: 0;
  left: 0;

  width: 100vw;
  height: 100vh;

  object-fit: cover;

  z-index: -2;
  pointer-events: none;
}

.profile-page,
.profile-page * {
  color: #ffffff;
  text-shadow:
    0 0 6px rgba(0,0,0,0.9),
    0 2px 8px rgba(0,0,0,0.8);
}


/* Layout */
.wrap{
   position: fixed; inset: 0;
  min-height: 100dvh; /* ‚Üê IMPORTANT (mobile safe) */
  display: flex;
  flex-direction: column;
  gap: 16px;
  align-items: center;
  justify-content: flex-start;
  

  padding: 22vh 16px 80px;
   

}



/* Cartes "briques" */
.card{
  width: min(520px, 92vw);
  border-radius: 18px;
  padding: 16px 16px;
  background:
    linear-gradient(180deg, rgba(20,18,28,0.78), rgba(10,10,16,0.72));
  border: 1px solid rgba(255,255,255,0.08);
  box-shadow:
    0 20px 60px rgba(0,0,0,0.25),
    0 0 0 1px rgba(120,80,255,0.08) inset;
  position: relative;
  overflow: hidden;
  will-change: transform;
transform: translateZ(0);

}

/* Micro ‚Äú√©nergie‚Äù + fissures (discret) */
.card::after{
  content:"";
  position:absolute; inset:-2px;
  background: radial-gradient(circle at 20% 20%, rgba(120,80,255,0.18), transparent 40%),
              radial-gradient(circle at 80% 30%, rgba(80,200,255,0.10), transparent 42%);
  pointer-events:none;
  opacity: 0.9;
}
.cracks{
  position:absolute; inset:0;
  background:
    linear-gradient(110deg, transparent 40%, rgba(160,120,255,0.10) 42%, transparent 44%),
    linear-gradient(20deg, transparent 55%, rgba(120,80,255,0.08) 57%, transparent 59%),
    linear-gradient(160deg, transparent 68%, rgba(120,80,255,0.06) 70%, transparent 72%);
  mix-blend-mode: screen;
  opacity: 0.7;
  pointer-events:none;
}

/* Identit√© */
.card-id .pseudo{
  font-size: 2.2rem;
  letter-spacing: 2px;
  text-align: center;
  text-shadow: 0 0 16px rgba(120,80,255,0.25);
}
.title-frame{
  
  padding: 10px 12px;
  border-radius: 14px;
  text-align: center;
  background: rgba(0,0,0,0.25);
  border: 1px solid rgba(255,255,255,0.10);
  box-shadow: 0 0 0 1px rgba(120,80,255,0.10) inset;
}
.player-title{
  font-size: 0.95rem;
  opacity: 0.9;
}

/* Mascotte */
.card-mascot{
  padding: 18px 16px 16px;
}
.mascot-box{
  width: 100%;
  display:flex;
  align-items:center;
  justify-content:center;
  padding: 10px 0 6px;
}
.mascot{
  width: min(280px, 70vw);
  height: auto;
  filter: drop-shadow(0 18px 32px rgba(0,0,0,0.45));
  transform: translateZ(0);
  animation: breathe 4.2s ease-in-out infinite;
}
@keyframes breathe{
  0%,100% { transform: scale(1); }
  50% { transform: scale(1.03); }
}
.xp-line{

  display:flex;
  align-items:center;
  justify-content:center;
  gap: 10px;
}
.xp-label{
  font-size: 0.95rem;
  opacity: 0.8;
}
.xp-value{
  font-size: 1.35rem;
  font-weight: 700;
  letter-spacing: 1px;
  text-shadow: 0 0 14px rgba(223, 230, 233, 0.22);
}

.level-line{
  display:flex;
  align-items:center;
  justify-content:center;
  gap: 10px;
  margin-top: 10px;
}
.level-label{
  font-size: 0.95rem;
  opacity: 0.8;
}
.level-value{
  font-size: 1.35rem;
  font-weight: 700;
  letter-spacing: 1px;
  text-shadow: 0 0 14px rgba(223, 230, 233, 0.22);
}

.progress-bar {
  position: relative;
  width: 100%;
  height: 20px;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 10px;
  overflow: hidden;
  margin-top: 10px;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4a0e4e, #8a2be2);
  width: 0%;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 0.8rem;
  opacity: 0.7;
  text-align: center;
  margin-top: 5px;
}

/* Stats mini */
.stats-row{
  width: min(520px, 92vw);
  display:flex;
  gap: 10px;
}
.mini{
  flex:1;
  padding: 14px 12px;
  border-radius: 16px;
}
.mini-label{
  font-size: 0.8rem;
  opacity: 0.7;
  text-align:center;
}
.mini-value{

  font-size: 1.05rem;
  font-weight: 600;
  text-align:center;
}

/* Boutons */
.actions{
  width: min(520px, 92vw);
  display:flex;
  gap: 12px;
  
}
.btn{
  flex:1;
  border: none;
  border-radius: 16px;
  padding: 14px 0;
  cursor: pointer;
  color: #fff;
  font-size: 1.05rem;
  transition: transform .2s ease, opacity .2s ease, box-shadow .2s ease;
}

.btn.energy{
  background: linear-gradient(90deg, rgba(60,170,255,0.55), rgba(120,80,255,0.55));
  box-shadow: 0 0 22px rgba(120,80,255,0.18);
}
.btn.energy:hover{ transform: scale(1.03); }

.btn.ghost{
  background: rgba(0,0,0,0.35);
  border: 1px solid rgba(255,255,255,0.10);
  opacity: 0.92;
}
.btn.ghost:hover{ transform: scale(1.03); opacity: 1; }


/* ===============================
   MOBILE LAYOUT PROPRE PROFIL
   =============================== */

/* üì± MOBILE PORTRAIT (< 480px) */
@media (max-width: 480px) {
  .wrap {
    min-height: 100dvh;
    padding: 3vh 12px 30px;
    gap: 12px;
  }

  .card-id {
    padding: 12px;
  }

  .card-id .pseudo {
    font-size: 1.5rem;
    letter-spacing: 1px;
  }

  .title-frame {
    margin-top: 8px;
    padding: 10px;
  }

  .player-title {
    font-size: 0.85rem;
  }

  .mascot {
    width: min(200px, 60vw);
  }

  .card-mascot {
    padding: 8px 12px 12px;
  }

  .xp-value, .level-value {
    font-size: 1.2rem;
  }

  .stats-row {
    flex-direction: column;
    gap: 8px;
  }

  .mini {
    padding: 12px 10px;
  }

  .mini-value {
    font-size: 0.95rem;
  }

  .actions {
    gap: 8px;
  }

  .btn {
    padding: 12px 0;
    font-size: 0.95rem;
  }
}

/* üì± MOBILE PAYSAGE (481px-768px) */
@media (min-width: 481px) and (max-width: 768px) {
  .wrap {
    min-height: 100dvh;
    padding: 4vh 16px 40px;
    gap: 14px;
  }

  .card-id .pseudo {
    font-size: 1.8rem;
  }

  .mascot {
    width: min(220px, 65vw);
  }

  .card-mascot {
    padding: 10px 14px 14px;
  }

  .stats-row {
    flex-direction: column;
    gap: 10px;
  }

  .actions {
    gap: 10px;
  }

  .btn {
    padding: 13px 0;
    font-size: 1rem;
  }
}

/* üíª TABLETTE (769px-1024px) */
@media (min-width: 769px) and (max-width: 1024px) {
  .wrap {
    padding: 8vh 20px 50px;
    gap: 18px;
  }

  .card {
    width: min(600px, 85vw);
  }

  .card-id .pseudo {
    font-size: 2.4rem;
    letter-spacing: 2.5px;
  }

  .player-title {
    font-size: 1.05rem;
  }

  .mascot {
    width: min(300px, 50vw);
  }

  .xp-value, .level-value {
    font-size: 1.5rem;
  }

  .stats-row {
    width: min(600px, 85vw);
    flex-direction: row;
  }

  .mini-value {
    font-size: 1.15rem;
  }

  .actions {
    width: min(600px, 85vw);
  }

  .btn {
    font-size: 1.1rem;
    padding: 15px 0;
  }
}

/* üñ• DESKTOP (> 1024px) */
@media (min-width: 1025px) {
  .wrap {
    padding: 12vh 20px 60px;
  }

  .card:hover {
    transform: translateY(-2px);
    box-shadow: 0 25px 70px rgba(0,0,0,0.35);
    transition: all 0.3s ease;
  }

  .btn:hover {
    transform: scale(1.05) !important;
  }
}

body.profile-page::before{
  content: "";
  position: fixed;
  inset: 0;

  background: radial-gradient(
    circle at center,
    rgba(0,0,0,0.35) 0%,
    rgba(0,0,0,0.65) 70%
  );

  z-index: -1;
  pointer-events: none;
}

.pseudo {
  cursor: pointer;
  transition: 0.2s;
}

.pseudo:hover {
  transform: scale(1.05);
  opacity: 0.9;
}


